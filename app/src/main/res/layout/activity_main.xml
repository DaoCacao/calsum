<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/ed_expression"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_clear"
            style="@style/BtnStyle"
            android:text="C" />

        <TextView
            android:id="@+id/btn_hi"
            style="@style/BtnStyle"
            android:text="Hi" />

        <TextView
            android:id="@+id/btn_erase"
            style="@style/BtnStyle"
            android:text="@string/erase" />

        <TextView
            android:id="@+id/btn_multiply"
            style="@style/BtnStyle"
            android:text="X" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_1"
            style="@style/BtnStyle"
            android:text="1" />

        <TextView
            android:id="@+id/btn_2"
            style="@style/BtnStyle"
            android:text="2" />

        <TextView
            android:id="@+id/btn_3"
            style="@style/BtnStyle"
            android:text="3" />

        <TextView
            android:id="@+id/btn_divide"
            style="@style/BtnStyle"
            android:text="/" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_4"
            style="@style/BtnStyle"
            android:text="4" />

        <TextView
            android:id="@+id/btn_5"

            style="@style/BtnStyle"
            android:text="5" />

        <TextView
            android:id="@+id/btn_6"

            style="@style/BtnStyle"
            android:text="6" />

        <TextView
            android:id="@+id/btn_minus"

            style="@style/BtnStyle"
            android:src="@drawable/ic_minus"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_7"
            style="@style/BtnStyle"
            android:text="7" />

        <TextView
            android:id="@+id/btn_8"
            style="@style/BtnStyle"
            android:text="8" />

        <TextView
            android:id="@+id/btn_9"
            style="@style/BtnStyle"
            android:text="9" />

        <TextView
            android:id="@+id/btn_plus"
            style="@style/BtnStyle"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_0"
            style="@style/BtnStyle"
            android:text="0" />

        <TextView
            android:id="@+id/btn_00"
            style="@style/BtnStyle"
            android:text="00" />

        <TextView
            android:id="@+id/btn_coma"
            style="@style/BtnStyle"
            android:text="," />

        <TextView
            android:id="@+id/btn_total"
            style="@style/BtnStyle"
            android:text="=" />
    </LinearLayout>

</LinearLayout>
